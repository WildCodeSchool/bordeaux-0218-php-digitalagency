{% extends 'layout.html.twig' %}

{% block stylesheet %}
  <link rel="stylesheet" href="/assets/css/accueilportfolio.css">
{% endblock %}

{% block content %}
<div id="Portfolio">
  <h1 style="margin-top: 50px;" class="text-center mb-5">PORTFOLIO DE L'AGENCE DIGITALE</h1>
  <h3>Notre agence Tetradigitale offre une palette de services adaptés à vos besoins.
    Prenez quelques minutes pour découvrir nos réalisations !!
  </h3>

  <div class="toolbar mb-5 mt-5 text-center">
    <button class="btn color-btn fil-cat" data-rel="all">ALL</button>
    <button class="btn color-btn fil-cat" data-rel="vitrine">VITRINE</button>
    <button class="btn color-btn fil-cat" data-rel="e-commerce">E-COMMERCE</button>
    <button class="btn color-btn fil-cat" data-rel="gestionDeStock">GESTION DE STOCK</button>
  </div>

  <div id="portfolio">
      {% for pf in portfolio %}
        <div class="tile scale-anm web all {{ pf.namecategories }}">
          <img class="zoom" src="/assets/images/{{ pf.link }}" height="350"/>
        </div>
      {% endfor %}
  </div>
  <div style="clear:both;"></div>

</div>

  {% block javascript %}
  {{ parent() }}
    <script src="/assets/js/portfolio.js"></script>
  {% endblock %}
{% endblock %}
